{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "ngx-translate-messageformat-compiler",
  "version": "4.0.0",
  "description": "Compiler for ngx-translate that uses messageformat.js to compile translations using ICU syntax for handling pluralization and gender",
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts",
      "umdModuleIds": {
        "messageformat": "messageformat",
        "@ngx-translate/core": "core$1"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist dist.tgz src/**/*.d.ts src/**/*.metadata.json src/**/*.js",
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "build": "ng-packagr -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lephyrus/ngx-translate-messageformat-compiler.git"
  },
  "keywords": [
    "angular",
    "angular 2",
    "declension",
    "i18n",
    "icu",
    "gender",
    "messageformat",
    "ngx-translate",
    "pluralization",
    "translate"
  ],
  "author": "Lukas Rieder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lephyrus/ngx-translate-messageformat-compiler/issues"
  },
  "homepage": "https://github.com/lephyrus/ngx-translate-messageformat-compiler#readme",
  "main": "bundles/ngx-translate-messageformat-compiler.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "peerDependencies": {
    "@angular/core": "^6.0.0",
    "@ngx-translate/core": "^10.0.0",
    "messageformat": "^2.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@ngx-translate/core": "^10.0.0",
    "@types/jasmine": "2.8.7",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-webpack": "^3.0.0",
    "messageformat": "^2.0.2",
    "ng-packagr": "^2.4.2",
    "prettier": "^1.12.1",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.6.2",
    "rxjs": "^6.1.0",
    "ts-loader": "^4.2.0",
    "tsickle": "^0.27.5",
    "tslib": "^1.9.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-loader": "^3.5.3",
    "typescript": "~2.7.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "zone.js": "^0.8.17"
  }
}
